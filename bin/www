#!/usr/bin/env node

let app = require('../app').app;
let debug = require('debug')('sardcoin-core:server');
let https = require('https');
let http = require('http');
let fs = require('fs');

let options;
let server;
let port = 8080;

if(process.env.PEM_PATH) { // If using certificates, enable SSL
    options = {
        key: fs.readFileSync(process.env.PEM_PATH + 'privkey2.pem').toString(),
        cert: fs.readFileSync(process.env.PEM_PATH + 'cert2.pem').toString()
    };

    server = https.createServer(options, app);
}
else {
    server = http.createServer(app);
}

server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

// Listeners
function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  let bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

function onListening() {
  let addr = server.address();
  let bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
